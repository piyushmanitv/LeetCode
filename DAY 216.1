class Solution {
public:
    int jobScheduling(vector<int>& start, vector<int>& end,
                      vector<int>& profit) {
        int n = profit.size();
        vector<array<int, 3>> arr(n);
        for (int i = 0; i < n; ++i)
            arr[i] = {start[i], end[i], profit[i]};

        sort(arr.begin(), arr.end());  

        vector<int> dp(n + 1, 0);  

        for (int i = n - 1; i >= 0; --i) {
            int idx = lower_bound(arr.begin() + i + 1, arr.end(), arr[i][1],
                                  [](const array<int, 3>& job, int target) {
                                      return job[0] < target;
                                  }) -
                      arr.begin();

            dp[i] = max(arr[i][2] + dp[idx], dp[i + 1]);
        }
        return dp[0];
    }
};
